{
    "manifest_version": 2,
    "name": "Tab Discarder",
    "description": "Discard active tabs",
    "version": "0.1",
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "permissions": [
        "storage",
        "tabs"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
